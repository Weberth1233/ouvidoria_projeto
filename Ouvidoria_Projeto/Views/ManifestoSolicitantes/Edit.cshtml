@model Ouvidoria_Projeto.Models.ManifestoSolicitante

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Manifesto do Solicitante</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
