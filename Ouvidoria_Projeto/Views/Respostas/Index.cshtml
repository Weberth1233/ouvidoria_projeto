@model IEnumerable<Ouvidoria_Projeto.Models.Resposta>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Minhas Respostas</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RespostaManifesto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manifesto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RespostaManifesto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manifesto.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.UserName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RespostaId">Editar</a> |
                <a asp-action="DetailsResposta" asp-route-id="@item.RespostaId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.RespostaId">Desativar</a>
            </td>
        </tr>
}
    </tbody>
</table>
