@model IEnumerable<Ouvidoria_Projeto.Models.Manifesto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Manifestos</h1>

<p>
    <button asp-controller="Manifesto" asp-action="Create" type="button" class="btn btn-primary">Novo Manifesto</button>
    <!-- <a asp-action="Create">Criar</a> -->
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoManifesto.Descricao)
            </th>
            <th>@Html.DisplayText("Ações")</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @{
                    var active = item.Status;
                    if (active == 0)
                    {
                        @Html.DisplayName("Aguardando")
                    }
                    else
                    {
                        @Html.DisplayName("Respondido")
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoManifesto.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ManifestoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ManifestoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ManifestoId">Delete</a>
                <a asp-action="Resposta" asp-route-id="@item.ManifestoId">Responder</a>
                @{
                    if (active != 0)
                    {
                        <a asp-action="Visualizar" asp-route-id="@item.ManifestoId">Visualizar Resposta</a>
                    }
                }
            </td>
        </tr>
}
    </tbody>
</table>
